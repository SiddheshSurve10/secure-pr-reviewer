{
  "name": "secure-pr-reviewer",
  "version": "1.0.0",
  "description": "Production-ready GitHub App for secure PR review comments",
  "author": "SiddheshSurve10",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d. ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch src --exec 'npm run build && probot run ./dist/index.js'",
    "start": "npm run build && probot run ./dist/index.js",
    "test": "jest",
    "test:watch":  "jest --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage . nyc_output *.tsbuildinfo"
  },
  "dependencies": {
    "probot": "^12.2.5",
    "@octokit/rest": "^19.0.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript":  "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "probot",
    "github",
    "app",
    "security",
    "code-review",
    "pull-request"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SiddheshSurve10/secure-pr-reviewer.git"
  },
  "bugs": {
    "url": "https://github.com/SiddheshSurve10/secure-pr-reviewer/issues"
  },
  "homepage": "https://github.com/SiddheshSurve10/secure-pr-reviewer#readme"
}